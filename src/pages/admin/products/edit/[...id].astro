---
import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { getProductById, updateProduct, getAllProducts } from '../../../../lib/products';

const { id } = Astro.params;

export async function getStaticPaths() {
  const products = await getAllProducts();
  return products.map(item => ({
    params: { id: item.id }, props: { item },
  }));
}

if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const productData = Object.fromEntries(formData);
    
    productData.price = parseFloat(productData.price);
    productData.is_available = formData.get('is_available') === 'on';

    const imageFile = formData.get('image');
     if (imageFile instanceof File) {
      
      const arrayBuffer = await imageFile.arrayBuffer();
      const buffer = Buffer.from(arrayBuffer);
      imageFile.buffer = buffer;
    }
    
    await updateProduct(id, productData, imageFile);
    return Astro.redirect('/admin/products');
  } catch (error) {
    console.error('Failed to update product:', error);
    // You might want to set an error message here to display to the user
  }
}


const product = await getProductById(id);
---

<AdminLayout title="Edit Product">
  <div class="container">
    <h1 class="title">Edit Product</h1>
    <form method="POST" enctype="multipart/form-data">
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" name="name" value={product.name} required>
        </div>
      </div>
      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea" name="description">{product.description}</textarea>
        </div>
      </div>
      <div class="field">
        <label class="label">Price</label>
        <div class="control">
          <input class="input" type="number" step="0.01" name="price" value={product.price} required>
        </div>
      </div>
      <div class="field">
        <label class="label">Category</label>
        <div class="control">
          <div class="select">
            <select name="category" required>
              <option value="appetizers" selected={product.category === 'appetizers'}>Appetizers</option>
              <option value="main-courses" selected={product.category === 'main-courses'}>Main Courses</option>
              <option value="desserts" selected={product.category === 'desserts'}>Desserts</option>
              <option value="drinks" selected={product.category === 'drinks'}>Drinks</option>
            </select>
          </div>
        </div>
      </div>
      <div class="field">
        <label class="label">Image</label>
        <div class="control">
          <input class="input" type="file" name="image" accept="image/*">
        </div>
        {product.image && (
          <div class="mt-2">
            <img src={product.image} alt={product.name} width="100">
          </div>
        )}
      </div>
      <div class="field">
        <label class="label">Is Available</label>
        <div class="control">
          <label class="checkbox">
            <input type="checkbox" name="is_available" checked={product.is_available}>
            Product is available
          </label>
        </div>
      </div>
     
      <div class="field">
        <div class="control">
          <button type="submit" class="button is-primary">Update Product</button>
        </div>
      </div>
    </form>
  </div>
</AdminLayout>